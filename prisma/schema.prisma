generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Server {
  id             String @id
  name           String
  subtitle       String
  description    String
  image_url      String
  ownerDiscordId String
  user           User   @relation(fields: [ownerDiscordId], references: [discordId])
}

model User {
  discordId String   @id @unique
  fivemId   String   @unique
  servers   Server[]
}
